# Pi-hole Setup Variables
# Generated by Ansible

# Network Interface
PIHOLE_INTERFACE={{ pihole_interface | default('eth0') }}

# IP Address
IPV4_ADDRESS={{ ansible_host }}/{{ homelab_network.split('/')[1] }}
IPV6_ADDRESS=

# DNS Settings
PIHOLE_DNS_1=1.1.1.1
PIHOLE_DNS_2=1.0.0.1
PIHOLE_DNS_3=2606:4700:4700::1111
PIHOLE_DNS_4=2606:4700:4700::1001

# Query Logging
QUERY_LOGGING=true

# Web Interface
INSTALL_WEB_SERVER=true
INSTALL_WEB_INTERFACE=true
LIGHTTPD_ENABLED=true

# Privacy Level (0 = show everything, 3 = anonymous)
PRIVACY_LEVEL=1

# Enable DNSSEC
DNSSEC=false

# Conditional Forwarding (for local network)
CONDITIONAL_FORWARDING=true
CONDITIONAL_FORWARDING_IP={{ homelab_gateway }}
CONDITIONAL_FORWARDING_DOMAIN={{ homelab_domain }}
CONDITIONAL_FORWARDING_REVERSE={{ homelab_network | regex_replace('\\.[0-9]+/[0-9]+$', '') }}

# Block Settings
BLOCKING_ENABLED=true

# Temperature Unit (C or F)
TEMPERATUREUNIT=C

# Web Server Port
WEBPORT=80

# DHCP Server (disabled by default, router handles DHCP)
DHCP_ACTIVE=false
DHCP_START=
DHCP_END=
DHCP_ROUTER=
DHCP_LEASETIME=24
PIHOLE_DOMAIN={{ homelab_domain }}
DHCP_IPv6=false
DHCP_rapid_commit=false
